generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid()) //@id é para definir uma chave primária, o @default serve para definir o tipo do id
  name  String
  email String @unique

  @@map("users") //usado para trocar o nome da tabela
}
